@model IEnumerable<LuanVan.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách nhân viên</h2>

@using (Html.BeginForm("Index", "NhanViens", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
    </div>
}
<p>
    @Html.ActionLink("Thêm nhân viên", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LOAINV.LNV_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_NGAYSINH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_QUEQUAN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_DIACHI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_GIOITINH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_NGAYKYHOPDONG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_NGAYKETTHUCHOPDONG)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_MATKHAU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NV_TAIKHOAN)
        </th>
        <th>Tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LOAINV.LNV_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_NGAYSINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_QUEQUAN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_DIACHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_GIOITINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_NGAYKYHOPDONG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_NGAYKETTHUCHOPDONG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_EMAIL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_MATKHAU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NV_TAIKHOAN)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.NV_ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.NV_ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.NV_ID })
            </td>
        </tr>
    }

</table>
