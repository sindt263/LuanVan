@model IPagedList<LuanVan.Models.NHANVIEN>

@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <button class="btn btn-light"><i class="fa fa-plus"></i>@Html.ActionLink("Tạo mới", "Create")</button>

                @using (Html.BeginForm("Index", "NhanViens", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
                    </div>
                }
            </div>
            <div class="container-fluid">
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover table-condensed" border="1">
                        <tr>
                            <th class="text-center">
                                @Html.DisplayName("Quyền nhân viên")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Tên nhân viên")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Ngày Sinh")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Quê quán")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Địa chỉ")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Giới tính")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Ngày ký hợp đồng")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Thời hạn")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Email")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Mật khẩu")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Tài khoản")
                            </th>
                            <th class="text-center">Tùy chọn</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.LOAINV.LNV_TEN)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NV_TEN)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.NV_NGAYSINH)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NV_QUEQUAN)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NV_DIACHI)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.NV_GIOITINH)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.NV_NGAYKYHOPDONG)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.NV_NGAYKETTHUCHOPDONG)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NV_EMAIL)
                                </td>
                                <td class="text-center">
                                    @*@Html.DisplayFor(modelItem => item.NV_MATKHAU)*@@Html.DisplayName("Ẩn")
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NV_TAIKHOAN)
                                </td>
                                <td>
                                    <button class="btn btn-success" style="width:80px"><i class="fa fa-edit"> @Html.ActionLink("Sửa", "Edit", new { id = item.NV_ID })</i> </button>
                                    @*<button class="btn btn-info"> @Html.ActionLink("Chi tiết", "Details", new { id = item.NV_ID }) </button>*@
                                    <button class="btn btn-warning" style="width:80px"><i class="fa fa-trash"> @Html.ActionLink("Xóa", "Delete", new { id = item.NV_ID })</i></button>
                                </td>
                            </tr>
                        }

                    </table>
                    <div class="col-md-12 text-center">
                        @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
