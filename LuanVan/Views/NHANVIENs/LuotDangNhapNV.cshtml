
@{
    ViewBag.Title = "LuotDangNhapNV";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string path = Server.MapPath("~/NhanVien.txt");
    StreamReader r = new StreamReader(path);
    string a = r.ReadToEnd();
    r.Close();
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">

                Lượt truy cập nhân viên
            </div>
                <div class="container-fluid scroll ">
                    <div class="panel-body">

                        <table class="table table-striped table-bordered table-hover table-condensed" border="1">
                            <tr>
                                <th class="text-center">Mã nhân viên</th>
                                <th class="text-center">Đăng nhập lúc</th>
                            </tr>

                            @Html.Raw(a)
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
