@model LuanVan.Models.KHUYENMAI

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script language="javascript">
    angular.module('myapp', [])
        .controller('DateController', ['$scope', function ($scope) {
            $scope.value = new Date("@Model.KM_NGAYBATDAU");
            $scope.value1 = new Date("@Model.KM_NGAYKETTHUC");
        }]);

</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" ng-app="myapp">
        <h4>Khuyến mãi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KM_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.KM_TEN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KM_TEN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KM_TEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  name="myForm" ng-controller="DateController">
            @Html.LabelFor(model => model.KM_NGAYBATDAU, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="KM_NGAYBATDAU" ng-model="value" id="KM_NGAYBATDAU" class="form-control" />

                @Html.ValidationMessageFor(model => model.KM_NGAYBATDAU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KM_GIATRI, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KM_GIATRI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KM_GIATRI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group"  name="myForm" ng-controller="DateController">
            @Html.LabelFor(model => model.KM_NGAYKETTHUC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="KM_NGAYKETTHUC" ng-model="value1" id="KM_NGAYKETTHUC" class="form-control" />
                @Html.ValidationMessageFor(model => model.KM_NGAYKETTHUC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KM_MOTA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KM_MOTA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KM_MOTA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Về trang danh sách", "Index")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
