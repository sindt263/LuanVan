@model IEnumerable<LuanVan.Models.NHACUNGCAP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Thêm nhà cung cấp", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NCC_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NCC_SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NCC_DIACHI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NCC_GHICHU)
        </th>
        <th>Tùy chọn</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NCC_TEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NCC_SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NCC_DIACHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NCC_GHICHU)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.NCC_ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.NCC_ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.NCC_ID })
        </td>
    </tr>
}

</table>
