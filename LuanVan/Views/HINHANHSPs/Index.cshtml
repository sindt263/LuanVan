@model IEnumerable<LuanVan.Models.HINHANHSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HA_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CHITIETSANPHAM.CTSP_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HA_ND)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HA_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CHITIETSANPHAM.CTSP_TEN)
        </td>
        <td>
            <asp:Repeater runat="server" id="myRepeater">
                <ItemTemplate>
                    <img src="/HINHANHSPs/getImage/@item.CTSP_ID" alt="" width="300" height="300" style="float:left" />
                </ItemTemplate>
            </asp:Repeater>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.HA_ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.HA_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.HA_ID })
        </td>
    </tr>
}

</table>
