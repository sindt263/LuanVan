@model IEnumerable<LuanVan.Models.NHOMSANPHAM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Thêm nhóm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NSP_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NSP_MOTA)
        </th>
        <th>Tùy chọn</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NSP_TEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NSP_MOTA)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.NSP_ID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.NSP_ID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.NSP_ID })
        </td>
    </tr>
}

</table>
