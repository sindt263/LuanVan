@model IEnumerable<LuanVan.Models.NHASANXUAT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>

<p>
    <button class="btn btn-light"> @Html.ActionLink("Create New", "Create")</button>
</p>
<table class="table">
    <tr>
        <th  class="text-center">
            @Html.DisplayNameFor(model => model.NSX_TEN)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.NSX_SDT)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.NSX_QUOCGIA)
        </th>
        <th class="text-center">
            @Html.DisplayNameFor(model => model.NSX_GHICHU)
        </th>
        <th class="text-center">Tùy chọn</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="text-left">
            @Html.DisplayFor(modelItem => item.NSX_TEN)
        </td>
        <td class="text-right">
            @Html.DisplayFor(modelItem => item.NSX_SDT)
        </td>
        <td class="text-left">
            @Html.DisplayFor(modelItem => item.NSX_QUOCGIA)
        </td>
        <td class="text-left">
            @Html.DisplayFor(modelItem => item.NSX_GHICHU)
        </td>
        <td class="text-center">
            <button class="btn btn-success"style="width:80px"><i class="fa fa-edit"> @Html.ActionLink("Sửa", "Edit", new { id = item.NSX_ID })</i></button>
            <button class="btn btn-info"style="width:80px"><i class="fa fa-book">@Html.ActionLink("Chi tiết", "Details", new { id = item.NSX_ID })</i></button>
            <button class="btn btn-warning"style="width:80px"><i class="fa fa-trash">@Html.ActionLink("Xóa", "Delete", new { id = item.NSX_ID })</i></button>
        </td>
    </tr>
}

</table>
