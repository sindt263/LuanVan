@model IEnumerable<LuanVan.Models.BAOHANH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>
@foreach (var i in ViewBag.b)
{
    <h2>@i</h2>
}
<p>
    @Html.ActionLink("Tạo loại bảo hành mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BH_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BH_MOTA)
        </th>
        <th>Tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BH_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BH_MOTA)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.BH_ID }) |
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.BH_ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.BH_ID })
            </td>
        </tr>
    }

</table>
