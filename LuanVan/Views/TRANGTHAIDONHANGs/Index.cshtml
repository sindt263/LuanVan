@model IEnumerable<LuanVan.Models.TRANGTHAIDONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <button class="btn btn-light"><i class="fa fa-plus"></i>@Html.ActionLink("Tạo mới", "Create")</button>

            </div>
            <div class="container-fluid">
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover table-condensed" border="1">
                        <tr>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.TTDH_TEN)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.TTDH_MOTA)
                            </th>
                            <th class="text-center">Tùy chọn</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.TTDH_TEN)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.TTDH_MOTA)
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-success" style="width:80px"><i class="fa fa-edit">@Html.ActionLink("Sửa", "Edit", new { id = item.TTDH_ID }) </i></button>
                                    <button class="btn btn-info" style="width:80px"><i class="fa fa-book">@Html.ActionLink("Chi tiết", "Details", new { id = item.TTDH_ID }) </i></button>
                                    <button class="btn btn-warning" style="width:80px"><i class="fa fa-trash">@Html.ActionLink("Xóa", "Delete", new { id = item.TTDH_ID })</i></button>
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
