        @*<th>
            @Html.DisplayNameFor(model => model.KH_MATKHAU)
        </th>*@
        <th>tùy chọn</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KH_TEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KH_EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KH_SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KH_DIACHI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KH_NGAYSINH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KH_GIOITINH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KH_TAIKHOAN)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.KH_MATKHAU)
        </td>*@
        <td>
            @Html.ActionLink("Sửa", "EditKH", new { id=item.KH_ID }) 
        </td>
    </tr>
}

</table>
