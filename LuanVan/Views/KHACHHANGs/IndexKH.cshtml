@model IEnumerable<LuanVan.Models.KHACHHANG>

@{
    ViewBag.Title = "IndexKH";
    Layout = "~/Views/Shared/_LayoutKH.cshtml";
}

<h2>Thông tin cá nhân</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KH_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KH_EMAIL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KH_SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KH_DIACHI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KH_NGAYSINH)
        </th>
