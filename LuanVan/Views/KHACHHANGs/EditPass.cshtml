@model LuanVan.Models.KHACHHANG

@{
    ViewBag.Title = "EditPass";
    Layout = "~/Views/Shared/_LayoutKH.cshtml";
}

<h2>Đổi mật khẩu</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KH_ID)
    @Html.HiddenFor(model => model.KH_TEN)
    @Html.HiddenFor(model => model.KH_EMAIL)
    @Html.HiddenFor(model => model.KH_SDT)
    @Html.HiddenFor(model => model.KH_DIACHI)
    @Html.HiddenFor(model => model.KH_NGAYSINH)
    @Html.HiddenFor(model => model.KH_GIOITINH)
    @Html.HiddenFor(model => model.KH_TAIKHOAN)

    <div class="form-group">
        @Html.LabelFor(model => model.KH_MATKHAU, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.KH_MATKHAU, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.KH_MATKHAU, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.KH_MATKHAU, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input class="form-control text-box single-line" data-val="true" data-val-length="The field KH_MATKHAU must be a string with a maximum length of 200." data-val-length-max="200" id="KH_MATKHAU1" name="KH_MATKHAU1" type="text" value="" />
            @Html.ValidationMessage("KH_MATKHAU1", "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xác nhận" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Về trang danh sách", "IndexKH")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
