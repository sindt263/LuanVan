@model IPagedList<LuanVan.Models.KHACHHANG>

@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách khách hàng</h2>

@using (Html.BeginForm("Index", "KhachHangs", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
    </div>
}
<p>
    @Html.ActionLink("Thêm khách hàng mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên khách hàng")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("SĐT")
        </th>
        <th>
            @Html.DisplayName("Địa chỉ")
        </th>
        <th>
            @Html.DisplayName("Ngày sinh")
        </th>
        <th>
            @Html.DisplayName("Giới tính")
        </th>
        <th>
            @Html.DisplayName("Tai khoản")
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.KH_MATKHAU)
            </th>*@
        <th>Tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KH_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KH_EMAIL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KH_SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KH_DIACHI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KH_NGAYSINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KH_GIOITINH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KH_TAIKHOAN)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.KH_MATKHAU)
                </td>*@
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.KH_ID }) |
                @*@Html.ActionLink("Chi tiết", "Details", new { id=item.KH_ID }) |*@
                @Html.ActionLink("Xóa", "Delete", new { id = item.KH_ID })
            </td>
        </tr>
    }

</table>
<div class="col-md-12 text-center">
    @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang }))
</div>