@model IEnumerable<LuanVan.Models.CHITIETBH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>

@using (Html.BeginForm("Index", "ChiTietBHs", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
    </div>
}
<p>
    @Html.ActionLink("Tạo phiếu mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BAOHANH.BH_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SANPHAM.SP_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TRANGTHAIBH.TTBH_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CTBH_NGAYBH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CTBH_NGAYTRA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CTBH_GHICHU)
        </th>
        <th>Tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BAOHANH.BH_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SANPHAM.SP_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TRANGTHAIBH.TTBH_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTBH_NGAYBH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTBH_NGAYTRA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTBH_GHICHU)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CTBH_ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CTBH_ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CTBH_ID })
            </td>
        </tr>
    }

</table>
