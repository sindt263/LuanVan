@model IPagedList<LuanVan.Models.SANPHAM>

@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    LuanVan.Controllers.SANPHAMsController sANPHAMs = new LuanVan.Controllers.SANPHAMsController();
}

<br />



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <button class="btn btn-light"><i class="fa fa-plus"></i>@Html.ActionLink("Thêm sản phẩm", "Create")</button>
                @using (Html.BeginForm("Index", "SanPhams", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
                    </div>
                }
            </div>
            <div class="container-fluid">
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-hover table-condensed" border="1">
                        <tr>
                            <th class="text-center">
                                @Html.DisplayName("ID")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Mã chi tiết")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Giá")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Khuyến mãi")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Nhà sản xuất")
                            </th>

                            <th class="text-center">
                                @Html.DisplayName("Tên sản phẩm")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Trạng thái")
                            </th>

                            <th class="text-center">Hình ảnh</th>
                            <th class="text-center">Tùy chọn</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_ID)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.CHITIETSANPHAM.CTSP_TEN)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.GIASP.GIA_GIA)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.KHUYENMAI.KM_TEN)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NHASANXUAT.NSX_TEN)
                                </td>

                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.SP_TEN)
                                </td>
                                @if (item.SP_TRANGTHAI == 1)
                                {
                                    <td class="text-center">
                                       Còn
                                    </td>
                                }
                                else
                                {
                                    <td class="text-center">
                                        Bán
                                    </td>}


                                <td class="text-center">
                                    <asp:Repeater runat="server" id="myRepeater">
                                        <ItemTemplate>
                                            <img src="/HinhAnhSPs/getImage/@item.CTSP_ID" alt="" width="200" height="200" />
                                        </ItemTemplate>
                                    </asp:Repeater>
                                </td>
                                <td class="text-center">

                                    <button class="btn btn-success" style="width:80px"><i class="fa fa-edit">  @Html.ActionLink("Sửa", "Edit", new { id = item.SP_ID })</i> </button>
                                    <br />
                                    <button class="btn btn-info" style="width:80px"><i class="fa fa-book"> <a href="~/CHITIETSANPHAMs/Details/@item.CTSP_ID">Chi tiết</a></i></button><br />

                                    <button class="btn btn-warning" style="width:80px"><i class="fa fa-trash">  @Html.ActionLink("Xóa", "Delete", new { id = item.SP_ID })</i></button>

                                </td>
                            </tr>
                        }

                    </table>
                    <div class="col-md-12 text-center">
                        @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
