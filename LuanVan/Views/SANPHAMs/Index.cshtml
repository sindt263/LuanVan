@model IPagedList<LuanVan.Models.SANPHAM>

@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .scroll {
        display: block;
        padding: 5px;
        margin-top: 5px;
       
        overflow: scroll;
    }

    .auto {
        display: block;
        padding: 5px;
        margin-top: 5px;
       
        overflow: auto;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <button class="btn btn-light"><i class="fa fa-plus"></i>@Html.ActionLink("Tạo mới", "Create")</button>

                @using (Html.BeginForm("Index", "SanPhams", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
                    </div>
                }
            </div>
            <div class="container-fluid scroll ">
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover table-condensed" border="1">
                        <tr>
                            <th class="text-center">
                                @Html.DisplayName("Tên")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Khuyến mãi")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Giá")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Nhà sản xuất")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Dòng sản phẩm")
                            </th>

                            <th class="text-center">
                                @Html.DisplayName("Công nghệ màn hình")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Độ phân giải")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Kích thước màn hình")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Camera trước")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Camera sau")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Hệ điều hành")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Bộ nhớ RAM")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Bộ nhớ ROM")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Dung lượng PIN")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Số SIM")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Ngày tạo")
                            </th>
                            <th class="text-center">
                                @Html.DisplayName("Thời gian bảo hành")
                            </th>
                            <th class="text-center">Tùy chọn</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.SP_TEN)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.KM_ID)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.GIASP.GIA_GIA)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.NHASANXUAT.NSX_TEN)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.DONGSANPHAM.DSP_TEN)
                                </td>

                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.SP_CNMANGHINH)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_DOPHANGIAI)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_MANHINH)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_CAMERATRUOC)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_CAMERASAU)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_HEDIEUHANH)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_RAM)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_ROM)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_DUNGLUONGPIN)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SP_SOSIM)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.SP_NGAYTAO)
                                </td>
                                <td class="text-right">
                                    @Html.DisplayFor(modelItem => item.SP_THOIGIANBH)
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-success" style="width:80px"><i class="fa fa-edit"> @Html.ActionLink("Sửa", "Edit", new { id = item.SP_ID })</i> </button>
                                    <button class="btn btn-info" style="width:80px"> <i class="fa fa-book"> @Html.ActionLink("Chi tiết", "Details", new { id = item.SP_ID })</i></button>
                                    <button class="btn btn-warning" style="width:80px"><i class="fa fa-trash">@Html.ActionLink("Xóa", "Delete", new { id = item.SP_ID })</i></button>
                                </td>
                            </tr>
                        }

                    </table>

                    <div class="col-md-12 text-center">
                        @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang, SearchTerm = ViewBag.SearchTerm }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>