@model IEnumerable<LuanVan.Models.CHITIETDONHANG>

@{
    ViewBag.Title = "IndexKH";
    Layout = "~/Views/Shared/_Layoutsecond.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Chi Tiết đơn hàng @Html.Raw(ViewBag.DH_ID)</h3>
            </div>
            <div class="container-fluid">
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover table-condensed">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DONHANG.KH_ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SANPHAM.SP_TEN)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CTDH_DIACHIGIAO)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CTDH_MATHE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CTDH_CHUTHE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CTDH_NGAYCAP)
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DONHANG.KH_ID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SANPHAM.SP_TEN)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CTDH_DIACHIGIAO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CTDH_MATHE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CTDH_CHUTHE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CTDH_NGAYCAP)
                                </td>

                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>