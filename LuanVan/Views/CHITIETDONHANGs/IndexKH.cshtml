@model IEnumerable<LuanVan.Models.CHITIETDONHANG>

@{
    ViewBag.Title = "IndexKH";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Chi Tiết đơn hàng @Html.Raw(ViewBag.DH_ID)</h3>
            </div>
            <div class="container-fluid">
                <div class="panel-body">

                    <table class="table table-striped table-bordered table-hover table-condensed">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DONHANG.KH_ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CHITIETSANPHAM.CTSP_TEN)
                            </th>
                           @if(Session["NV_ID"] != null)
                           {
                               <th>Tùy chọn</th>
                           }
                        </tr>

                        @foreach (var item in Model)
                        {
                        <tr>
                            @if (item.DONHANG.KH_ID == null)
                            {
                                <td>Khách không dùng tài khoản</td>
                            }
                            else
                            {
                                <td>
                                    @Html.DisplayFor(modelItem => item.DONHANG.KH_ID)
                                </td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.CHITIETSANPHAM.CTSP_TEN)
                            </td>
                            @if (Session["NV_ID"] != null)
                            {
                            <td> <button class="btn btn-warning" style="width:80px"><i class="fa"><a href="@Url.Action("Delete", new {id = item.CTDH_ID, id2 = item.CTSP_ID })" onclick="return confirm('Bạn có chắc muốn xóa @item.CHITIETSANPHAM.CTSP_TEN ?');" class="btn btn-danger btn-sm">Xóa</a> </i> </button></td>
                            }
                        </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>