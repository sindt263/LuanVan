@model IEnumerable<LuanVan.Models.CHITIETDONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "ChiTietDonHangs", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
    </div>
}
<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DONHANG.KH_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SANPHAM.SP_TEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CTDH_DIACHIGIAO)
        </th>
        <th>tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DONHANG.KH_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SANPHAM.SP_TEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTDH_DIACHIGIAO)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CTDH_ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CTDH_ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CTDH_ID })
            </td>
        </tr>
    }

</table>
