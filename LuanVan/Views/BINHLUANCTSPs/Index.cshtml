@model IEnumerable<LuanVan.Models.BINHLUANCTSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <button class="btn btn-light"><i class="fa fa-plus"></i>@Html.ActionLink("Tạo mới", "Create")</button>
                @using (Html.BeginForm("Index", "BinhLuanCTSPs", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
                    </div>
                }
            </div>
            <div class="container-fluid">
                <div class="panel-body">

                        <table class="table table-striped table-bordered table-hover table-condensed" border="1">
                            <tr>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.CHITIETSANPHAM.CTSP_TEN)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.KHACHHANG.KH_TEN)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.NHANVIEN.NV_TEN)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.BL_ND)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.BL_THOIGIAN)
                                </th>
                                <th class="text-center">
                                    @Html.DisplayNameFor(model => model.BL_TL)
                                </th>
                                <th class="text-center">Tùy chọn</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.CHITIETSANPHAM.CTSP_TEN)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.KHACHHANG.KH_TEN)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.NHANVIEN.NV_TEN)
                                    </td>
                                    <td class="text-left">
                                        @Html.DisplayFor(modelItem => item.BL_ND)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.BL_THOIGIAN)
                                    </td>
                                    <td class="text-center">
                                        @Html.DisplayFor(modelItem => item.BL_TL)
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-success" style="width:80px"><i class="fa fa-edit">@Html.ActionLink("Edit", "Edit", new { id = item.BL_ID })</i>  </button>
                                        <button class="btn btn-info" style="width:80px"><i class="fa fa-edit">@Html.ActionLink("Details", "Details", new { id = item.BL_ID })</i> </button>
                                        <button class="btn btn-warning" style="width:80px"><i class="fa fa-edit"> @Html.ActionLink("Delete", "Delete", new { id = item.BL_ID })</i> </button>
                                    </td>
                                </tr>
                            }

                        </table>
                </div>
            </div>
        </div>
    </div>
</div>
