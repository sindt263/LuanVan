@model IPagedList<LuanVan.Models.CHITIETSANPHAM>

@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách</h2>

@using (Html.BeginForm("Index", "ChiTietSanPhams", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm sản phẩm" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
    </div>
}
<p>
    <button class="btn btn-light"> @Html.ActionLink("Thêm chi tiết", "Create")</button>
</p>
<table class="table" border="1">
    <tr>
        <th class="text-center">
            @Html.DisplayName("Tên")
        </th>
        <th class="text-center">
            @Html.DisplayName("Công nghệ màn hình")
        </th>
        <th class="text-center">
            @Html.DisplayName("Độ phân giải")
        </th>
        <th class="text-center">
            @Html.DisplayName("Kích thước màn hình")
        </th>
        <th class="text-center">
            @Html.DisplayName("Camera trước")
        </th>
        <th class="text-center">
            @Html.DisplayName("Camera sau")
        </th>
        <th class="text-center">
            @Html.DisplayName("Hệ điều hành")
        </th>
        <th class="text-center">
            @Html.DisplayName("Bộ nhớ RAM")
        </th>
        <th class="text-center">
            @Html.DisplayName("Bộ nhớ ROM")
        </th>
        <th class="text-center">
            @Html.DisplayName("Dung lượng PIN")
        </th>
        <th class="text-center">
            @Html.DisplayName("Số SIM")
        </th>
        <th class="text-center">
            @Html.DisplayName("Ngày tạo")
        </th>
        <th class="text-center">Tùy chọn</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td  class="text-left">
                @Html.DisplayFor(modelItem => item.CTSP_TEN)
            </td>
            <td class="text-left">
                @Html.DisplayFor(modelItem => item.CTSP_CNMANGHINH)
            </td>
            <td  class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_DOPHANGIAI)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_MANHINH)
            </td>
            <td  class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_CAMERATRUOC)
            </td>
            <td  class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_CAMERASAU)
            </td>
            <td  class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_HEDIEUHANH)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_RAM)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_ROM)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_DUNGLUONGPIN)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.CTSP_SOSIM)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.CTSP_NGAYTAO)
            </td>
            <td  class="text-center">
                <button class="btn btn-success"  style="width:80px"><i class="fa fa-edit"> @Html.ActionLink("Sửa", "Edit", new { id = item.CTSP_ID })</i> </button>
                <button class="btn btn-info"  style="width:80px"> <i class="fa fa-book"> @Html.ActionLink("Chi tiết", "Details", new { id = item.CTSP_ID })</i></button>
                <button class="btn btn-warning" style="width:80px"><i class="fa fa-trash">@Html.ActionLink("Xóa", "Delete", new { id = item.CTSP_ID })</i></button>
            </td>
        </tr>
    }

</table>

<div class="col-md-12 text-center">
    @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang }))
</div>