@{
                /**/

                Layout = "~/Views/Shared/Login/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


<h1 style="color:blue; background-color: white"> Đăng nhập khách hàng</h1>
    
    <div class="w3layoutscontaineragileits">
        <h2>Trang đang nhập</h2>
        <form action="#" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-alert" })
            <input type="text" Name="TK" placeholder="Tài khoản" id="TK" required="" value="@ViewBag.TK">
            <input type="password" Name="MK" placeholder="PASSWORD" id="MK" required="" value="@ViewBag.MK">
            <ul class="agileinfotickwthree">
                <li>
                    @if (string.IsNullOrEmpty(ViewBag.TK) && string.IsNullOrEmpty(ViewBag.MK))
                    {
                        <input type="checkbox" id="brand1" name="remember" value="1">
                    }
                    else
                    {
                        <input type="checkbox" id="brand1" name="remember" checked="checked" value="1">
                    }

                    <label for="brand1"><span></span>Nhớ mật khẩu</label>
                    <a href="/">Trang chủ</a>
                </li>
            </ul>
            <div class="aitssendbuttonw3ls">
                <input type="submit" value="Đăng nhập">


                <p>Nhấn để tạo tài khoản mới <span>→</span> <a class="w3_play_icon1" href="#small-dialog1"> Tại đây </a></p>
                <div class="clear"></div>
            </div>

        </form>
    </div>

