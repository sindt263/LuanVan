@{
    Layout = "~/Views/Shared/Login/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h1 style="color:red; background-color:white">Đăng nhập nhân viên</h1>

    <div class="w3layoutscontaineragileits">
        <h2>Trang đang nhập</h2>
        <form action="#" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-alert" })
            <input type="text" Name="NVTK" placeholder="Tài khoản" id="NVTK" required="" value="@ViewBag.TKNV">
            <input type="password" Name="NVMK" placeholder="Mật khẩu" id="NVMK" required="" value="@ViewBag.MKNV">
            <ul class="agileinfotickwthree">
                <li>
                    @if (string.IsNullOrEmpty(ViewBag.TKNV) && string.IsNullOrEmpty(ViewBag.MKNV))
                    {
                        <input type="checkbox" id="brand1" name="remember" value="1">
                    }
                    else
                    {
                        <input type="checkbox" id="brand1" name="remember" checked="checked" value="1">
                    }
                    <label for="brand1"><span></span>Nhớ mật khẩu</label>
                    <a href="#">Quên mật khẩu?</a>
                </li>
            </ul>
            <div class="aitssendbuttonw3ls">
                <input type="submit" value="LOGIN">
               
            </div>
        </form>
    </div>




    <script type="text/javascript" src="~/Content/css/Login/js/jquery-2.1.4.min.js"></script>

    <!-- pop-up-box-js-file -->
    <script src="~/Content/css/Login/js/jquery.magnific-popup.js" type="text/javascript"></script>
    <!--//pop-up-box-js-file -->
    <script>
        $(document).ready(function () {
            $('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
                type: 'inline',
                fixedContentPos: false,
                fixedBgPos: true,
                overflowY: 'auto',
                closeBtnInside: true,
                preloader: false,
                midClick: true,
                removalDelay: 300,
                mainClass: 'my-mfp-zoom-in'
            });
            
        });
    </script>

}
